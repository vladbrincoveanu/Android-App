			<!--android:layout_width="69dp"-->
			<!--android:layout_height="wrap_content"-->
			<!--android:inputType="textPersonName"-->
			<!--android:text="Date"-->
			<!--android:ems="10"-->
			<!--android:id="@+id/editText2"-->
			<!--android:layout_alignStart="@+id/mapEventJoined" android:layout_alignParentBottom="true"-->
			<!--android:layout_marginBottom="249dp"/>-->
	<TextView
			android:layout_width="172dp"
			android:layout_height="38dp" android:layout_alignParentBottom="true"
			android:id="@+id/categoryEventJoined" android:layout_marginBottom="171dp"
			android:layout_alignStart="@+id/dateEventJoined"/>

</RelativeLayout>

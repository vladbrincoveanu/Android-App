<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/final_login_jesusssss"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Issues"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Here is the place where you can create a new issue or vote the importance of an existing one"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=" If you wish to create a new issue, tap button below"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reportIssue"
                android:text="Report new issue"
                android:background="@color/buttonColor"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Localize an issue"
                android:background="@color/buttonColor"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:id="@+id/localizeIssue"
                android:textColor="#FFF"
                android:textStyle="bold"
                />

        </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_view"
        android:dividerHeight="20dp"
        android:layout_marginTop="20dp"
        />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
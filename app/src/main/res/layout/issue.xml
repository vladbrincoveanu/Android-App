<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/id_icon"
            android:id="@+id/profile_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/issue_title"
            android:layout_marginStart="50dp"
            android:text="Test"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below= "@+id/issue_title"
            android:id="@+id/issue_cateogry"
            android:text="Category"
            android:layout_marginStart="50dp"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginStart="200dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="FOLLOW"
            android:id="@+id/follow_button"
            android:background="@color/buttonColor"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mountain"
            android:layout_marginTop="20dp"
            android:id="@+id/issue_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teeeeeeeeeeeeeeeeeeeest"
            android:layout_marginTop="20dp"
            android:id="@+id/issue_description"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proposed solution"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOLUTIOOON"
            android:id="@+id/issue_solution"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upvote"
                android:background="#32CD32"
                android:textColor="#FFF"
                android:id="@+id/upvote_button"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Downvote"
                android:background="#B22222"
                android:textColor="#FFF"
                android:id="@+id/downvote_button"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Votes: "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/votes"
                android:text="100"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>